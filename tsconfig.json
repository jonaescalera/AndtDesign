{
    "compilerOptions": {
      "jsx": "react-jsx",
      "module": "commonjs",
      "noImplicitAny": true,
      "outDir": "./dist/",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es5",
      "importHelpers": true,
      "moduleResolution": "node",
      "esModuleInterop": true
    },
    "include":  ["./src/**/*"]
  }